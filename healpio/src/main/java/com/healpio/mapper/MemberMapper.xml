<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.healpio.mapper.MemberMapper">

	<select id="login" resultType="com.healpio.vo.MemberVO">
		select *
		from member
		where member_id=#{member_id} 
	</select>
	
	<!-- 추가된 resultMap -->
    <resultMap type="com.healpio.vo.MemberVO" id="MemberVOResultMap">
        <id property="member_no" column="member_no" />
        <result property="member_id" column="member_id" />
        <result property="member_pw" column="member_pw" />
        <result property="member_name" column="member_name" />
        <result property="email" column="email" />
        <result property="nickname" column="nickname" />
        <result property="teacheryn" column="teacheryn" />
        <result property="adminyn" column="adminyn" />
        <result property="phonenumber" column="phonenumber" />
    </resultMap>
	
	<select id="findId" resultMap="MemberVOResultMap">
		select * from member where email = #{email}
	</select>
	
	<select id="findPw" resultMap="MemberVOResultMap">
    	select * from member where email = #{email} and member_name = #{member_name}
	</select>

	<select id="idCheck" resultType="int">
		select count(*)
			from member
			where member_id=#{member_id}
	</select>
	
	<select id="nickCheck" resultType="int">
		select count(*)
			from member
			where nickname=#{nickname}
	</select>
	
	<insert id="insert">
  <selectKey keyProperty="member_no" resultType="java.lang.String" order="BEFORE">
    SELECT 'M' || LPAD(SEQ_MEMBER.NEXTVAL, 6, '0') as member_no FROM DUAL
  </selectKey>
  insert into member 
  (member_no, member_id, member_pw, member_name, nickname, phonenumber, email, teacheryn)
  values 
  (#{member_no}, #{member_id}, #{member_pw}, #{member_name}
  , #{nickname}, #{phonenumber}, #{email}, #{teacheryn})		
</insert>


	
</mapper>